<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <activity
        android:id="@+id/introActivity"
        android:name="com.example.projectproductivity.IntroActivity"
        android:label="activity_intro"
        tools:layout="@layout/activity_intro" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.projectproductivity.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_introFragment"
            app:destination="@id/introFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.projectproductivity.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/introFragment"
        android:name="com.example.projectproductivity.IntroFragment"
        android:label="fragment_todo"
        tools:layout="@layout/fragment_todo" />
</navigation>